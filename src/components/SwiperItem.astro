---
// SwiperItem.astro
import ButtonLink from "@/components/ButtonLink.astro";

interface Props {
  title: string;
  description: string;
  image: string;
  href: string;
}

const { title, description, image, href } = Astro.props;
---

<!-- Contenedor del slide -->
<section class="flex flex-col md:flex-row w-full h-full">
  <!-- Columna izquierda: texto -->
  <div
    class="flex-1 flex flex-col justify-center items-center text-center md:text-left px-6 md:px-16 gap-6 bg-[#121212] bg-opacity-90 backdrop-blur-sm"
  >
    <div class="max-w-lg">
      <h1
        class="slide-title text-4xl md:text-5xl font-heading text-primary font-bold"
      >
        {title}
      </h1>
      <p
        class="slide-description mt-4 text-lg text-white/90 font-light leading-relaxed"
      >
        {description}
      </p>
      <ButtonLink className="slide-button mt-6" href={href}>
        Ver m√°s
      </ButtonLink>
    </div>
  </div>

  <!-- Columna derecha: imagen -->
  <div class="flex-1 h-full">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover"
      loading="lazy"
    />
  </div>
</section>
