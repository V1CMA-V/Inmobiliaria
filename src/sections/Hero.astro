---
// Hero.astro
import SwiperItem from "@/components/SwiperItem.astro";
---

<swiper-container
  init="false"
  class="mySwiper w-full h-screen"
  loop="true"
  pagination="true"
  navigation="true"
  keyboard="true"
  slides-per-view="1"
  mousewheel="true"
  onSwiper="onSwiper"
>
  <!-- Slide 1: Venta -->
  <swiper-slide class="h-full w-full flex flex-col md:flex-row">
    <SwiperItem
      title="Compra tu hogar"
      description="Encuentra la propiedad perfecta en la mejor ubicación de la ciudad."
      image="/Hero/venta.webp"
      href="/venta"
    />
  </swiper-slide>

  <!-- Slide 2: Renta -->
  <swiper-slide class="h-full w-full flex flex-col md:flex-row">
    <SwiperItem
      title="Alquila tu hogar"
      description="Descubre opciones flexibles para tu estilo de vida."
      image="/Hero/renta.webp"
      href="/renta"
    />
  </swiper-slide>

  <!-- Slide 3: Asesoría -->
  <swiper-slide class="h-full w-full flex flex-col md:flex-row">
    <SwiperItem
      title="Contáctanos"
      description="Nuestro equipo está listo para ayudarte a tomar la mejor decisión."
      image="/Hero/contacto.webp"
      href="/contacto"
    />
  </swiper-slide>
</swiper-container>
