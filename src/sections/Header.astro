---
import Close from "@/components/icons/Close.astro";
import Menu from "@/components/icons/Menu.astro";
---

<header id="site-header" class="fixed inset-0 z-50">
  <!-- Top Bar -->
  <nav
    class="w-full px-6 md:px-10 py-4 md:py-6 flex justify-between items-center"
  >
    <div class="flex items-center gap-4">
      <h2>
        <a href="#" class="text-5xl font-semibold text-primary">Century 21</a>
      </h2>
    </div>
    <button id="menu-btn" aria-label="Abrir menú">
      <Menu
        className="text-3xl text-primary hover:text-white transition duration-200 cursor-pointer"
      />
    </button>
  </nav>

  <!-- Fullscreen Menu -->
  <div
    id="full"
    class="fixed inset-0 bg-black/80 backdrop-blur-md flex flex-col md:flex-row visibility-hidden"
  >
    <!-- Links -->
    <div
      id="menu-links"
      class="flex-1 flex flex-col justify-center px-20 gap-6"
    >
      <span
        class="hover:scale-110 transition duration-200 cursor-pointer w-fit"
      >
        <a href="#" class="text-5xl font-semibold text-white hover:text-primary"
          >Inicio</a
        >
      </span>
      <span
        class="hover:scale-110 transition duration-200 cursor-pointer w-fit"
      >
        <a href="#" class="text-5xl font-semibold text-white hover:text-primary"
          >Contáctanos</a
        >
      </span>
      <span
        class="hover:scale-110 transition duration-200 cursor-pointer w-fit"
      >
        <a href="#" class="text-5xl font-semibold text-white hover:text-primary"
          >Servicios</a
        >
      </span>
      <span
        class="hover:scale-110 transition duration-200 cursor-pointer w-fit"
      >
        <a href="#" class="text-5xl font-semibold text-white hover:text-primary"
          >Blog</a
        >
      </span>
    </div>

    <!-- Contact Info -->
    <div
      id="menu-info"
      class="flex-1 flex flex-col justify-center px-10 gap-6 bg-black/60"
    >
      <div>
        <p class="text-sm text-muted">Teléfono</p>
        <a
          href="tel:5560908911"
          class="text-lg font-medium text-white hover:text-primary transition"
          >55 6090 8911</a
        >
      </div>
      <div>
        <p class="text-sm text-muted">Correo</p>
        <a
          href="mailto:contacto@inmobiliaria.com"
          class="text-lg font-medium text-white hover:text-primary transition"
          >contacto@inmobiliaria.com</a
        >
      </div>
      <div>
        <p class="text-sm text-muted">País</p>
        <span class="text-lg text-white hover:text-primary transition clickable"
          >México</span
        >
      </div>
      <div>
        <p class="text-sm text-muted">Ciudad</p>
        <span class="text-lg text-white hover:text-primary transition clickable"
          >Ciudad de México</span
        >
      </div>

      <button
        id="close-btn"
        class="absolute top-6 right-6 text-white hover:text-primary clickable"
      >
        <Close className="text-2xl cursor-pointer" />
      </button>
    </div>
  </div>
</header>

<script type="module" src="/src/js/header-animate.js"></script>
